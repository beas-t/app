<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F7FA"
        tools:context=".SettingsActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#0066CC"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Settings"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/notification_container"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_search"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="#FFFFFF" />

                <FrameLayout
                    android:id="@+id/notification_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/notification_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notifications"
                        app:tint="#FFFFFF" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:background="#EF4444" />
                </FrameLayout>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:id="@+id/settings_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Profile Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/profile_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/profile_image"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="#DBEAFE"
                            android:padding="8dp"
                            android:src="@drawable/ic_doctor"
                            app:shapeAppearanceOverlay="@style/CircleImage"
                            app:tint="#0066CC" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@id/profile_image"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dr. Sarah Johnson"
                                android:textColor="#111827"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/view_profile_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View Profile"
                                android:textColor="#6B7280"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_sign_in_arrow"
                            app:tint="#D1D5DB" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Grid Actions -->
                <GridLayout
                    android:id="@+id/action_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:columnCount="2">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/analytics_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_retake"
                                android:tint="#3B82F6" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Sync Data"
                                android:textColor="#374151"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/backup_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_reports"
                                android:tint="#9333EA" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Backup Now"
                                android:textColor="#374151"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/clear_cache_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginEnd="8dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_save"
                                android:tint="#F97316" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Clear Cache"
                                android:textColor="#374151"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/export_all_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_share"
                                android:tint="#10B981" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Export All"
                                android:textColor="#374151"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </GridLayout>

                <!-- Operational Status -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/status_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#F0FDF4"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="#DCFCE7"
                    app:strokeWidth="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/st_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_check_circle"
                            android:tint="#16A34A" />

                        <LinearLayout
                            android:id="@+id/status_text_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@id/st_icon"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="All Systems Operational"
                                android:textColor="#166534"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Last synced: Just now"
                                android:textColor="#16A34A"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_below="@id/status_text_container"
                            android:layout_alignStart="@id/status_text_container"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/ic_logo"
                            android:tint="#16A34A" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Storage Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Storage"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/storage_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/used_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1.2 GB"
                                android:textColor="#111827"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@id/used_txt"
                                android:layout_marginStart="4dp"
                                android:layout_toEndOf="@id/used_txt"
                                android:text="used"
                                android:textColor="#6B7280"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignBaseline="@id/used_txt"
                                android:text="5 GB Total"
                                android:textColor="#6B7280"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <!-- Progress Bar -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:layout_marginTop="12dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#F3F4F6" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:weightSum="100">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="60"
                                    android:background="#3B82F6" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="15"
                                    android:background="#10B981" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:background="#9CA3AF" />
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_marginEnd="4dp"
                                android:background="#3B82F6" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:text="Scans"
                                android:textColor="#6B7280"
                                android:textSize="10sp" />

                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_marginEnd="4dp"
                                android:background="#10B981" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:text="Reports"
                                android:textColor="#6B7280"
                                android:textSize="10sp" />

                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_marginEnd="4dp"
                                android:background="#9CA3AF" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cache"
                                android:textColor="#6B7280"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/btn_manage_storage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="16dp"
                            android:text="Manage Storage"
                            android:textColor="#374151"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Features -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Features"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/btn_analytics"
                            layout="@layout/settings_item_direct"
                            app:icon="@{@drawable/ic_analytics}"
                            app:iconTint="@{0xFF3B82F6}"
                            app:title='@{"Analytics"}' />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="52dp"
                            android:background="#F3F4F6" />

                        <include
                            android:id="@+id/btn_team_management"
                            layout="@layout/settings_item_direct"
                            app:icon="@{@drawable/ic_team}"
                            app:iconTint="@{0xFF9333EA}"
                            app:title='@{"Team Management"}' />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="52dp"
                            android:background="#F3F4F6" />

                        <include
                            android:id="@+id/btn_appointments"
                            layout="@layout/settings_item_direct"
                            app:icon="@{@drawable/ic_description}"
                            app:iconTint="@{0xFF10B981}"
                            app:title='@{"Appointments"}' />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="52dp"
                            android:background="#F3F4F6" />

                        <include
                            android:id="@+id/btn_training"
                            layout="@layout/settings_item_direct"
                            app:icon="@{@drawable/ic_auto_measure}"
                            app:iconTint="@{0xFFF97316}"
                            app:title='@{"Training"}' />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="52dp"
                            android:background="#F3F4F6" />

                        <include
                            android:id="@+id/btn_equipment"
                            layout="@layout/settings_item_direct"
                            app:icon="@{@drawable/ic_equipment}"
                            app:iconTint="@{0xFF6B7280}"
                            app:title='@{"Equipment"}' />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- App Settings -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="App Settings"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/btn_notifications"
                            layout="@layout/settings_item_direct"
                            app:icon="@{@drawable/ic_notifications}"
                            app:iconTint="@{0xFF6B7280}"
                            app:title='@{"Notifications"}' />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="52dp"
                            android:background="#F3F4F6" />

                        <include
                            android:id="@+id/btn_display"
                            layout="@layout/settings_item_direct"
                            app:icon="@{@drawable/ic_display}"
                            app:iconTint="@{0xFF6B7280}"
                            app:title='@{"Display"}' />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="52dp"
                            android:background="#F3F4F6" />

                        <include
                            android:id="@+id/btn_language"
                            layout="@layout/settings_item_direct"
                            app:extra='@{"English"}'
                            app:icon="@{@drawable/ic_language}"
                            app:iconTint="@{0xFF6B7280}"
                            app:title='@{"Language"}' />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Privacy -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Privacy &amp; Security"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/btn_change_password"
                            layout="@layout/settings_item_direct"
                            app:icon="@{@drawable/ic_lock}"
                            app:iconTint="@{0xFF6B7280}"
                            app:title='@{"Change Password"}' />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="52dp"
                            android:background="#F3F4F6" />

                        <include
                            android:id="@+id/btn_data_privacy"
                            layout="@layout/settings_item_direct"
                            app:icon="@{@drawable/ic_check_circle}"
                            app:iconTint="@{0xFF6B7280}"
                            app:title='@{"Data Privacy"}' />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Support -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Support"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/btn_help_center"
                            layout="@layout/settings_item_direct"
                            app:icon="@{@drawable/ic_home}"
                            app:iconTint="@{0xFF6B7280}"
                            app:title='@{"Help Center"}' />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="52dp"
                            android:background="#F3F4F6" />

                        <include
                            android:id="@+id/btn_feedback"
                            layout="@layout/settings_item_direct"
                            app:icon="@{@drawable/ic_manual_mode}"
                            app:iconTint="@{0xFF6B7280}"
                            app:title='@{"Send Feedback"}' />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="52dp"
                            android:background="#F3F4F6" />

                        <include
                            android:id="@+id/btn_contact_support"
                            layout="@layout/settings_item_direct"
                            app:icon="@{@drawable/ic_doctor}"
                            app:iconTint="@{0xFF6B7280}"
                            app:title='@{"Contact Support"}' />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="52dp"
                            android:background="#F3F4F6" />

                        <include
                            android:id="@+id/btn_about"
                            layout="@layout/settings_item_direct"
                            app:icon="@{@drawable/ic_warning}"
                            app:iconTint="@{0xFF6B7280}"
                            app:title='@{"About"}' />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Log Out -->
                <LinearLayout
                    android:id="@+id/btn_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_sign_in_arrow"
                        android:rotation="180"
                        app:tint="#EF4444" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Log Out"
                        android:textColor="#EF4444"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="BladSense AI v2.1.0 (Build 402)"
                    android:textColor="#9CA3AF"
                    android:textSize="10sp" />
            </LinearLayout>
        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:itemIconTint="@color/bottom_nav_item_color"
            app:itemTextColor="@color/bottom_nav_item_color"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottom_nav_menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>